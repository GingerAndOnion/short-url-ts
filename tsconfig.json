{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": false,
        "target": "es6",
         "lib": ["es6"],
        "types": ["reflect-metadata", "jest"], 
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "baseUrl": "./src",
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "src/obsolete",
        "src/key_service"
    ]
}
